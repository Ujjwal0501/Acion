<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kshitij.com.acion">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_food"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_food"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SelectionPane"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NameSearch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ResultList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IngredientSearch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RandomResult"
            android:screenOrientation="portrait" />
    </application>

</manifest>